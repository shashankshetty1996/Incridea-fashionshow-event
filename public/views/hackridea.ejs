<section id="hackridea">
    <div class="container">
        <h1 class="display-4">{{msg}}</h1>

        <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1 col-sm-12">
            <div class="card">
                <div class="card-body">
                    <form action="" name="hackridea" method="post" role="form" ng-submit="login()">
                        <div class="form-group" ng-class="{ 'has-error': hackridea.tname.$dirty && hackridea.tname.$error.required }">
                            <label for="teamName" class="label-control">Team Name:</label>
                            <input type="text" class="form-control" ng-model="tname" name="tname" maxlength="20" placeholder="Enter Team Name here">
                            <span class="help-block text-info">Maximum 20 Character</span>
                            <span ng-show="hackridea.tname.$dirty && hackridea.tname.$error.required" class="help-block text-danger">Team name is required</span>
                        </div>
                        <div class="form-group" ng-class="{ 'has-error': hackridea.np.$dirty && hackridea.np.$error.required }">
                            <label for="teamName" class="label-control">Number of Participant:</label>
                            <label class="radio-inline px-3">
                                <input type="radio" ng-model="np" name="np">2 Members
                            </label>
                            <label class="radio-inline px-3">
                                <input type="radio" ng-model="np" name="np">3 Members
                            </label>
                            <span ng-show="hackridea.np.$dirty && hackridea.np.$error.required" class="help-block text-danger">Number of participants is required</span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>