<section id="login">
    <div class="container">
        <marquee behavior="scroll" direction="left">{{ msg }}</marquee>
        <div class="row d-flex flex-column align-items-center">
            <div class="col-lg-8 col-md-12">
                <form name="loginForm" method="POST" ng-submit="login()" role="form">
                    <div class="form-group">
                        <label for="name" class="control-label">Name:</label>
                        <input type="text" class="form-control" ng-model="username" name="username" placeholder="Enter your Username here" required>
                    </div>
                    <div class="form-group">
                        <label for="password" class="control-label">Password:</label>
                        <input type="password" class="form-control" ng-model="password" name="password" placeholder="Enter your password here" required>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="submit" class="btn btn-primary btn-block">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>