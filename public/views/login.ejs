<section id="login">
    <div class="container">
        <div class="row valign-wrapper min-h">
            <div class="card-panel mx-auto">
                <form name="form" method="POST" ng-submit="login()" role="form">
                    <div class="col s12 input-field" ng-class="{ 'has-error': form.username.$dirty && form.username.$error.required }">
                        <i class="material-icons prefix">account_circle</i>
                        <input type="text" name="username" id="username" ng-model="username" required>
                        <label for="username">Name:</label> 
                    </div>
                    <div class="col s12 input-field" ng-class="{ 'has-error': form.password.$dirty && form.password.$error.required }">
                        <i class="material-icons prefix">vpn_key</i>
                        <input type="password" name="password" id="password" ng-model="password" required>
                        <label for="password">Password:</label> 
                    </div>
                    <div class="col">
                        <button class="btn waves-effect waves-light input-field" ng-disabled="form.$invalid" type="submit" name="action">Submit
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>